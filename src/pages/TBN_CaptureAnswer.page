<apex:page controller="TBN_CaptureAnswerController">
     <apex:form >
         <div class="treeheader" style="height:0px;">&nbsp;</div>

<ul id="tree">
    <apex:repeat value="{!mainnodes}" var="parent">
        <li><strong><apex:outputtext style="color:blue;" escape="false" value="{!parent.gparent.Name}"/></strong>
             <ul>
                 <apex:repeat value="{!parent.parent}" var="child">
                    <li><span class="formattextcon"><apex:outputtext style="color:red;" escape="false" value="{!child.Name}"/></span>
                        <ul>
                            
                                <apex:outputPanel rendered="{!child.Answers__r.size <= 0}">
                               <li> <span class="formattextcon"><apex:inputField rendered="{!child.Type__c == 'Textarea'}" style="color:green;" value="{!parent.objAns.Answer__c}" />
                               
                                                               <apex:selectList rendered="{!child.Type__c == 'Picklist'}" value="{!items}" size="1" style="color:green;" >
                                                                 <apex:selectOptions value="{!parent.lstSelOptions}"/>
                                                                 </apex:selectList>
                                                            <!--   <apex:inputField rendered="{!child.Type__c == 'Picklist'}" style="color:green;" value="{!parent.lstSelOptions }" /> -->
                            </span> 
                                    </li>
                                </apex:outputPanel>
                    
                             <apex:outputPanel rendered="{!child.Answers__r.size > 0}">                         
                            <apex:repeat value="{!child.Answers__r}" var="gchildren">
                               <li> <span class="formattextcon"><apex:outputField rendered="{!child.Type__c == 'Textarea'}" style="color:green;" value="{!gchildren.Answer__c}" />
                                                              </span> </li>
                            </apex:repeat>
                             </apex:outputPanel>
                        </ul>       
                    </li>
                 </apex:repeat>  
             </ul>  
        </li>
    </apex:repeat>
</ul>
     </apex:form>
</apex:page>